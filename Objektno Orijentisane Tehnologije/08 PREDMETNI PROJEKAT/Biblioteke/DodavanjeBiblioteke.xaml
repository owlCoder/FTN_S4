            <Label HorizontalAlignment="Center" FontWeight="Bold" FontSize="22" Content="DODAVANJE BIBLIOTEKE" Margin="0 5 0 0"/>

            <Label Content="Naziv:" FontSize="16" FontWeight="Bold"/>
            <TextBox Name="nazivBiblioteke" FontSize="16" FontWeight="Bold"/>

            <Label Content="Adresa:" FontSize="16" FontWeight="Bold"/>
            <TextBox Name="adresaBiblioteke" FontSize="16" FontWeight="Bold"/>

            <Label Content="Godina Osnivanja:" FontSize="16" FontWeight="Bold"/>
            <TextBox Name="godinaOsnivanjaBiblioteke" FontSize="16" FontWeight="Bold"/>

            <Label Content="Logo Biblioteke:" FontSize="16" FontWeight="Bold"/>
            <Button Name="logoBiblioteke" Click="logoBiblioteke_Click" Content="ODABIR LOGOA BIBLIOTEKE" FontSize="14" FontWeight="Bold" />

            <Label Content=""/>
            <Button Content="DODAVANJE BIBLIOTEKE" Click="Button_Click" FontWeight="Bold" FontSize="20" Margin="0 10 0 0"/>
        </StackPanel>
    </Border>
</Page>
