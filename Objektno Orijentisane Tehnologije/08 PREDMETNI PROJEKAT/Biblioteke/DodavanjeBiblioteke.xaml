<Page x:Class="OOT_PP_PR83_PR55_2020_BIBLIOTEKA.Biblioteka.DodavanjeBiblioteke"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OOT_PP_PR83_PR55_2020_BIBLIOTEKA.Biblioteka"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="DodavanjeBiblioteke">
    <Border  MaxWidth="400" MaxHeight="400" Background="White" BorderBrush="White" BorderThickness="0" CornerRadius="20, 20, 20, 20" Margin="80 70 80 90">
